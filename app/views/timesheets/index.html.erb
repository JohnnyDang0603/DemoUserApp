<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br />

<%= link_to "New timesheet", new_timesheet_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>User id</th>
         <th>Check in</th>
         <th>Check out</th>
         <th>Day</th>
         <th></th>
      </tr>
   </thead>

   <tbody>
      <% @timesheets.each do |timesheet| %>

         <tr>
            <td><%= timesheet.user_id %></td>
            <td><%= timesheet.check_in.strftime("%H : %M")%></td>
            <td><%= timesheet.check_out.strftime("%H : %M")%></td>
            <td><%= timesheet.day.strftime("%d - %m - %Y")%></td>
            <td>
              <div class="btn-group"><%= button_to "Delete",  timesheet, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete ?" %>
                <%= link_to "Update",edit_timesheet_path(timesheet), class: "btn btn-success" %></div>
            </td>
            <td></td>

         </tr>
      <% end %>
   </tbody>

</table>
