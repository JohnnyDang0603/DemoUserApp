<h1>Edit Timesheet</h1>
<%= form_with model: @timesheet,:url=>{:action=>"update",:id=>@timesheet}, local: true do |form| %>
  <% if flash[:list_error].present? %>
    <div class="panel panel-warning errors">
      <div class="panel-heading">
        <h5><i class="glyphicon glyphicon-exclamation-sign"></i> Found errors while saving</h5>
      </div>

      <ul class="panel-body">
        <% flash[:list_error].each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id,class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :check_in, style: "display: block" %>
    <%= form.text_field :check_in,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :check_out, style: "display: block" %>
    <%= form.text_field :check_out,class:'form-control'%>
  </div>
  <div class="form-group">
    <%= form.label :day, style: "display: block" %>
    <%= form.text_field :day,class:'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit "Save Change",class: 'btn btn-primary' %>
    <%=link_to "Back", timesheets_path,class:'btn btn-success'%>
  </div>
 
<% end %>
