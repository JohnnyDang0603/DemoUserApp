<div class="container-sm">
<h1>New User</h1>
 <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %></h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: @user, local: true do |form| %>
  <div class="form-outline mb-4">
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username, class:"form-control" %>
  </div>
   <div class="form-group">
   <%= form.label :gender, style: "display: block" %>
  <%= form.radio_button :gender, 'male', checked: true %> male
    <%= form.radio_button :gender, 'female' %> female
  </div>
  <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class:'form-control'%>
  </div>
  <div class="form-group">
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday, format: "dd/mm/YYYY", class:'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, class:'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit "Save", class: 'btn btn-outline-primary' %>
    <%=link_to "Back", users_path,class:'btn btn-outline-success'%>
  </div>
<% end %>
</div>
