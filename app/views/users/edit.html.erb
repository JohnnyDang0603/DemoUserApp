<div class="container sm">
<h1>Edit User</h1>
 <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, "error") %></h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_with model: @user,url: user_path(@user), local: true do |form| %>
  <div class="form-group">
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username,value: @user.username, class:"form-control" %>
  </div>
   <div class="form-group">
   <%= form.label :gender, style: "display: block" %>
   <%= form.radio_button :gender, 'male', checked: @user.gender=='male'? true:false %> male
    <%= form.radio_button :gender, 'female', checked: @user.gender=='female'? true:false %> female
  </div>
  <div class="form-group mb-2">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, value: @user.address, class:'form-control'%>
  </div>
  <div class="form-group mb-2">
    <%= form.label :birthday, style: "display: block" %>
    <%= form.date_field :birthday, value: @user.birthday, format: "%d-%m-%y",class:'form-control' %>
  </div>
  <div class="form-group mb-2">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, value: @user.email, class:'form-control' %>
  </div>
  <div class="actions">
    <%= form.submit "Save", class: 'btn btn-outline-primary' %>
    <%=link_to "Back", users_path,class:'btn btn-outline-success'%>
  </div>
<% end %>



</div>
