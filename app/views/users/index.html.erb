



<table class = "table table-bordered table-striped">
   <thead>.
      <tr>
         <th>User id</th>
         <th>Username</th>
         <th>Birth Day</th>
         <th>Email</th>
         <th></th>
      </tr>
   </thead>
   
   <tbody>
      <% @timesheets.each do |timesheet| %>
         
         <tr>
            <td><%= timesheet.user_id %></td>
            <td><%= timesheet.check_in.strftime("%H : %M")%></td>
            <td><%= timesheet.check_out.strftime("%H : %M")%></td>
            <td><%= timesheet.day%></td>
            <td>
              <div class="btn-group"><%= button_to "Delete",  timesheet, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete ?" %>
                <%= link_to "Update",  timesheet, method: :edit,:id => timesheet.id, class: "btn btn-success" %></div>
            </td>
            <td></td>

         </tr>
      <% end %>
   </tbody>
   
</table>